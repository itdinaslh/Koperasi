@model TipeVM

<div class="modal-header">
    @if (Model.TipeBarang.TipeBarangID == 0)
    {
        <h4 class="modal-title">Tambah Merk Barang</h4>
    }
    else
    {
        <h4 class="modal-title">Edit Merk Barang</h4>
    }


    <button type="button" class="btn-close" data-bs-dismiss="modal">&times;</button>
</div>

<div class="modal-body mx-50 pb-3">
    <form action="/master/barang/tipe/save" class="row gy-1 gx-2 mt-75" method="post">
        <input type="hidden" asp-for="TipeBarang.TipeBarangID" />
        <div class="col-12">
            <div class="form-group">
                <label class="form-label">Jenis Barang</label>
                <select id="sJenis" asp-for="TipeBarang.MerkBarang.JenisBarangId" class="form-control"></select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <label class="form-label">Nama Merk Barang</label>
                <select id="sMerk" class="form-control" asp-for="TipeBarang.MerkBarangId"></select>
                <span class="text-danger"></span>
            </div>
            <div>
                <label class="form-label">Nama Barang</label>
                <input type="text" class="form-control" autocomplete="off" autofocus asp-for="TipeBarang.NamaTipe"/>
                <span class="text-danger"></span>
            </div>
        </div>
        <div class="col-12 text-end mt-2">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Tutup</button>
            <button type="submit" class="btn btn-success">Simpan</button>
        </div>
    </form>
</div>
