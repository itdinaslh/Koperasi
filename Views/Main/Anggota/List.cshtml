@{
	ViewBag.Title = "Anggota";
	ViewBag.Subtitle = "Keanggotaan";
}

@section styles {
	<link href="~/assets/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet">
	<link href="~/assets/vendor/sweetalert2/dist/sweetalert2.min.css" rel="stylesheet">	
	<style>
		.dataTables_info {
			color: #969ba0 !important;
		}
	</style>
}

<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<h4 class="card-title">Tabel Data Anggota</h4>
				</div>
				<div class="card-body">
					<table id="tblData" class="table table-responsive table-striped">
						<thead>
							<tr>
								<th>Nama</th>
								<th>NIK</th>
								<th>Penugasan</th>
								<th>Penempatan</th>
								<th>Status</th>
								<th>Aksi</th>
							</tr>
						</thead>
					</table>
				</div>
			</div>
		</div>
	</div>

	<a class="flatbtn" href="#" data-href="/anggota/create">+</a>
</div>

@section vendorjs {
	<script src="~/assets/vendor/datatables/js/jquery.dataTables.min.js"></script>
	<script src="~/assets/vendor/sweetalert2/dist/sweetalert2.min.js"></script>	
}

@section scripts {
	<script src="~/pages/main/anggota/list.js"></script>
}
